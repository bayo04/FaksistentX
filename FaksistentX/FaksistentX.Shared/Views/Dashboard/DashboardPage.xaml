<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaksistentX.Shared.Views.Dashboard.DashboardPage"
             xmlns:dxcv="http://schemas.devexpress.com/xamarin/2014/forms/collectionview"
             xmlns:dxe="http://schemas.devexpress.com/xamarin/2014/forms/editors">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <dxcv:DXCollectionView ItemsSource="{Binding Courses}" x:Name="CourseCollectionView" Orientation="Horizontal" HeightRequest="300">
                <dxcv:DXCollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#41B3A3" CornerRadius="10" BackgroundColor="#C38D9E" Margin="5">
                            <StackLayout Spacing="0" Margin="5">
                                <Label Margin="20" FontSize="16" FontAttributes="Bold" Text="{Binding Course.Name}"/>

                                <dxe:SimpleButton VerticalOptions="Center" Text="Details" Command="{Binding CourseDetailsCommand}"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </dxcv:DXCollectionView.ItemTemplate>
            </dxcv:DXCollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>